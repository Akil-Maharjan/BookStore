# Server
PORT=5000
NODE_ENV=development

# Database
# Full MongoDB connection string (no trailing slash is fine). Do not include db name here unless your cluster requires it.
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/<optional-db>?retryWrites=true&w=majority
# Database name to use (will be passed as dbName in Mongoose.connect)
MONGO_DB=bookstore

# Auth
# Generate a strong secret for JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d

# CORS
CLIENT_URL=http://localhost:5173

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Payments (optional)
# Khalti secret key from your Khalti merchant account
KHALTI_SECRET_KEY=
# eSewa merchant code (test: EPAYTEST)
ESEWA_MERCHANT_CODE=

# Email (required for contact form)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
# Optional override for recipient (defaults to akilmaharjan44@gmail.com)
CONTACT_TO=
